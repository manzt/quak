{
	"name": "@manzt/quak",
	"version": "0.0.2",
	"exports": "./lib/mod.ts",
	"license": "MIT",
	"tasks": {
		"dev": "deno run -A --node-modules-dir npm:esbuild --bundle --minify --loader:.css=text --format=esm --outfile=src/quak/widget.js lib/widget.ts --sourcemap=inline --watch",
		"build": "deno run -A --node-modules-dir npm:esbuild --bundle --minify --loader:.css=text --format=esm --outfile=src/quak/widget.js lib/widget.ts",
		"vite": "deno run -A --node-modules-dir npm:vite",
		"check": "deno check lib/widget.ts"
	},
	"nodeModulesDir": "auto",
	"compilerOptions": {
		"verbatimModuleSyntax": true,
		"lib": [
			"esnext",
			"dom",
			"dom.iterable"
		]
	},
	"publish": {
		"include": ["lib", "README.md"]
	},
	"imports": {
		"@js-temporal/polyfill": "npm:@js-temporal/polyfill@^0.5.1",
		"@lukeed/uuid": "npm:@lukeed/uuid@^2.0.1",
		"@preact/signals-core": "npm:@preact/signals-core@^1.11.0",
		"@uwdata/flechette": "npm:@uwdata/flechette@^2.1.0",
		"@uwdata/mosaic-core": "npm:@uwdata/mosaic-core@^0.18.0",
		"@uwdata/mosaic-plot": "npm:@uwdata/mosaic-plot@^0.18.0",
		"@uwdata/mosaic-sql": "npm:@uwdata/mosaic-sql@^0.18.0",
		"d3": "npm:d3@^7.9.0",
		"htl": "npm:htl@~0.3.1"
	},
	"exclude": [
		".venv",
		"src",
		"examples",
		"README.md",
		"CONTRIBUTING.md",
		"dist",
		"cli"
	],
	"fmt": {
		"useTabs": true
	},
	"lint": {
		"rules": {
			"exclude": [
				"prefer-const"
			]
		}
	}
}
