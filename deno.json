{
	"lock": false,
	"name": "@manzt/quak",
	"version": "0.0.0",
	"exports": "./lib/mod.ts",
	"license": "MIT",
	"tasks": {
		"build": "deno run -A scripts/build.ts",
		"dev": "deno run -A scripts/build.ts --watch",
		"check": "deno check lib/widget.ts"
	},
	"compilerOptions": {
		"verbatimModuleSyntax": true,
		"allowJs": false,
		"lib": [
			"esnext",
			"dom",
			"dom.iterable"
		]
	},
	"publish": {
		"include": ["lib", "README.md"]
	},
	"imports": {
		"@anywidget/types": "npm:@anywidget/types@0.1.9",
		"@js-temporal/polyfill": "npm:@js-temporal/polyfill@0.4.4",
		"@lukeed/uuid": "npm:@lukeed/uuid@2.0.1",
		"@preact/signals-core": "npm:@preact/signals-core@1.6.1",
		"@uwdata/mosaic-core": "npm:@uwdata/mosaic-core@0.10.0",
		"@uwdata/mosaic-sql": "npm:@uwdata/mosaic-sql@0.10.0",
		"@uwdata/mosaic-plot": "npm:@uwdata/mosaic-plot@0.10.0",
		"apache-arrow": "npm:apache-arrow@16.1.0",
		"htl": "npm:htl@0.3.1",
		"d3-selection": "npm:d3-selection@3.0.0",
		"d3-scale": "npm:d3-scale@4.0.2",
		"d3-axis": "npm:d3-axis@3.0.0",
		"d3-format": "npm:d3-format@3.1.0",
		"d3-time-format": "npm:d3-time-format@4.1.0"
	},
	"fmt": {
		"useTabs": true,
		"exclude": [
			".venv",
			"src",
			"examples",
			"README.md",
			"CONTRIBUTING.md",
			"dist"
		]
	},
	"lint": {
		"rules": {
			"exclude": [
				"prefer-const"
			]
		},
		"exclude": [
			".venv",
			"src",
			"examples",
			"dist"
		]
	}
}
